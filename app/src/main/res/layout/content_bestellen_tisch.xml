<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/content_bestellen_tisch"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ch.hsr.edu.sinv_56082.gastroginiapp.ui.BestellenTischActivity"
    tools:showIn="@layout/activity_bestellen_tisch">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gesamtbetrag"
        android:id="@+id/gesamtBetrag"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextLight"
        android:padding="8dp"
        android:elevation="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:gravity="left" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bezahlt"
        android:id="@+id/gesamtBetragBezahltSwitch"
        android:layout_alignBottom="@+id/gesamtBetrag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="16dp"
        android:layout_margin="8dp"
        android:padding="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teilbetrag"
        android:id="@+id/teilBetragText"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextLight"
        android:padding="8dp"
        android:elevation="8dp"
        android:gravity="left"
        android:layout_below="@+id/gesamtBetrag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bezahlt"
        android:id="@+id/teilBetragSwitch"
        android:elevation="16dp"
        android:padding="1dp"
        android:layout_alignBottom="@+id/teilBetragText"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignLeft="@+id/gesamtBetragBezahltSwitch"
        android:layout_alignStart="@+id/gesamtBetragBezahltSwitch"
        android:checked="false" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_below="@+id/teilBetragText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Anzahl"
            android:id="@+id/textView2"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Produkt"
            android:id="@+id/textView3"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GrÃ¶sse"
            android:id="@+id/textView4"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Preis"
            android:id="@+id/textView5"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/recyclerViewContainer_bestellenTisch"
        android:layout_below="@+id/linearLayout4">

    </RelativeLayout>

</RelativeLayout>
