<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ch.hsr.edu.sinv_56082.gastroginiapp.ui.activities.order.ServiceHome">


    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >
            <TextView
                android:id="@+id/order_table_subtitel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Open orders"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorIconLight"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:id="@+id/product_item_name_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Product"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorIconLight"
                />
            <TextView
                android:id="@+id/product_item_name_size"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Size"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorIconLight"
                />
            <TextView
                android:id="@+id/product_item_name_price"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Price"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorIconLight"
                />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/tableOrderRecyclerView"
            android:layout_alignParentStart="true" />



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/show_order_end_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:layout_anchorGravity="bottom|right|end"
            />





    </LinearLayout>

</RelativeLayout>
