<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ch.hsr.edu.sinv_56082.gastroginiapp.ui.activities.order.NewOrderView"
    tools:showIn="@layout/activity_new_order_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSubTitleDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 1"
                android:id="@+id/productCategoryMyProductCategoryOne"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/title_text_size"
                android:padding="16dp"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorTextLight" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/productCategoryOneExpandCollapseIcon"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:tint="@color/colorIconLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myProductCategoryOneRecyclerView"
            android:layout_below="@+id/productCategoryMyProductCategoryOne"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="2"
            android:visibility="gone" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSubTitleDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 2"
                android:id="@+id/productCategoryMyProductCategoryTwo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/title_text_size"
                android:padding="16dp"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorTextLight" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/productCategoryTwoExpandCollapseIcon"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:tint="@color/colorIconLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myProductCategoryTwoRecyclerView"
            android:layout_below="@+id/productCategoryMyProductCategoryTwo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layoutMode="clipBounds"
            android:layout_weight="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSubTitleDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 3"
                android:id="@+id/productCategoryMyProductCategoryThree"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/title_text_size"
                android:padding="16dp"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorTextLight" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/productCategoryThreeExpandCollapseIcon"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:tint="@color/colorIconLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myProductCategoryThreeRecyclerView"
            android:layout_below="@+id/productCategoryMyProductCategoryThree"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layoutMode="clipBounds"
            android:layout_weight="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSubTitleDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 4"
                android:id="@+id/productCategoryMyProductCategoryFour"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/title_text_size"
                android:padding="16dp"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorTextLight" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/productCategoryFourExpandCollapseIcon"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:tint="@color/colorIconLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myProductCategoryFourRecyclerView"
            android:layout_below="@+id/productCategoryMyProductCategoryFour"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layoutMode="clipBounds"
            android:layout_weight="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSubTitleDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 5"
                android:id="@+id/productCategoryMyProductCategoryFive"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/title_text_size"
                android:padding="16dp"
                android:background="@color/colorSubTitleDark"
                android:textColor="@color/colorTextLight" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/productCategoryFiveExpandCollapseIcon"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:tint="@color/colorIconLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myProductCategoryFiveRecyclerView"
            android:layout_below="@+id/productCategoryMyProductCategoryFive"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layoutMode="clipBounds"
            android:layout_weight="2" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="BestellungsÃ¼bersicht"
            android:id="@+id/button"
            android:layout_gravity="right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Abbrechen"
            android:id="@+id/button2"
            android:layout_gravity="left" />
    </LinearLayout>
</LinearLayout>
